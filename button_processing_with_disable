<!DOCTYPE html>
<html>
<body>
<input onclick="change()" type="button" value="Add To Cart" id="myButton1"/>
</body>
<script>
 function change() 
{
    var elem = document.getElementById("myButton1");
     elem.value = "Adding...";
                
    if(elem.value=="Adding...") 
    
    elem.disabled=true;
    
    setTimeout(function () {
       // alert("Item added to cart"); 
               elem.value= "Added";
           }, 700);  
}
            
         
            
            </script>
</html> 


//roughly change behaviour of add to cart button 
function change() 
{

    var elem = document.getElementById("myButton1");
     elem.value = "Adding...";
                
    if(elem.value=="Adding...") 
    
    elem.disabled=true;
    
    var t=false;
    if(t==true)
    setTimeout(function () {
       elem.value= "Added";
        }, 700);
        
        else if(t==false) 
        {
        elem.value = "error in Adding...";
        setTimeout(function () {
        elem.disabled=false;
       elem.value= "Add To Cart";
        }, 700);
        
               
        };
    
 
    
      
}
