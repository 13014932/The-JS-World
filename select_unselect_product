<script>
function myFunction() {
    var checkBox = document.getElementById("myCheck");
    var text = document.getElementById("img1");
    if (checkBox.checked == true){
$("#img1").fadeIn();
        //text.style.display = "block";      
    } else {
       $("#img1").fadeOut();
      // setTimeout(function(){ text.style.display = "none"; }, 500);
    }
}
